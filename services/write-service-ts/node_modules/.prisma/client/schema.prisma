generator client {
  provider      = "prisma-client-js"
  // binaryTargets ensures Prisma generates the correct engines
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id                String   @id @default(uuid())
  name              String
  description       String
  start             DateTime
  end               DateTime
  location          String?
  online_link       String?
  min_attendees     Int?
  max_attendees     Int?
  location_notes    String?
  preparation_notes String?
  created_at        DateTime @default(now())
  updated_at        DateTime @default(now()) @updatedAt

  @@map("events") // map to existing Postgres table
}
